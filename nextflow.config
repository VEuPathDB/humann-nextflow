params {
  sampleToFastqsPath = "$baseDir/data/sample-to-fastqs.tsv"
  resultDir = "$baseDir/results"
  resultNameTaxons = "taxons.tsv"
  resultNameFunctions = "functions.tsv"
  kneaddataFlags = "--trimmomatic ~/lib/Trimmomatic-0.39 --bypass-trf --reference-db ~/kneaddata_databases"
  wgetCommand = "wget --waitretry=10 --read-timeout=20 --retry-connrefused --tries 10"
  humannCommand = "humann --bypass-prescreen --bypass-nucleotide-search"
}


process {
  executor = 'lsf'
  queue = 'eupathdb'

  withLabel: 'mem_4c' {
   clusterOptions = '-n 4 -M 12240 -R "rusage [mem=12240] span[hosts=1]"'
  }
}


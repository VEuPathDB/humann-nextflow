params {
  sampleToFastqsPath = "$baseDir/data/sample-to-fastqs.tsv"
  resultDir = "$baseDir/results"
  kneaddataCommand = "kneaddata --trimmomatic ~/lib/Trimmomatic-0.39 --bypass-trf --reference-db ~/kneaddata_databases"
  wgetCommand = "wget --waitretry=10 --read-timeout=20 --retry-connrefused --tries 3"
  humannCommand = "humann"
  unirefXX = "uniref90"
  functionalUnits = [ "eggnog", "go", "ko", "level4ec", "pfam", "rxn" ]
}


process {
  executor = 'lsf'
  queue = 'eupathdb'
  maxForks = 20

  withLabel: 'mem_4c' {
   clusterOptions = '-n 4 -M 10240 -R "rusage [mem=12240] span[hosts=1]"'
  }
}

